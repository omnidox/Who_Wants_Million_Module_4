<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".millionaire_Win">

        <TextView
            android:id="@+id/congratulationsIcon2"
            android:layout_width="match_parent"
            android:text="Congratulations! You're a Millionaire!"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/quizDoneTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@id/congratulationsIcon2"
            android:layout_marginTop="50dp"
            android:text="See The Amount Below!"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/rightWrongAnswers2"
            android:layout_below="@id/quizDoneTextView2"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/correctAnswers2"
                android:text="0 $"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backHomePageBtn"
            android:layout_below="@id/rightWrongAnswers2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Return To Homepage"
            android:textColor="#FFFFFF"
            android:background="@drawable/round_back_green20"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"/>



    </RelativeLayout>

</ScrollView>